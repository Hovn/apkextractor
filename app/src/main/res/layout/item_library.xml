<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/lib_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/colorHighLightText"
        android:textSize="14sp"
        tools:text="libcore.soooooooooo000000000000000000000000" />

    <TextView
        android:id="@+id/lib_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/lib_name"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="2"
        android:textColor="@color/color_text_normal"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        tools:text="(x86,x86_64,mips,mips64,arm-v7a,arm64-v8a,arm)" />

    <View
        android:id="@+id/dividingLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#ddd" />
</RelativeLayout>